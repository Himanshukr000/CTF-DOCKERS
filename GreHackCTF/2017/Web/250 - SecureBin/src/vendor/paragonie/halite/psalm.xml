<?xml version="1.0"?>
<psalm
    name="Example Psalm config with recommended defaults"
    stopOnFirstError="false"
    useDocblockTypes="true"
    totallyTyped="false"
>
    <projectFiles>
        <directory name="src" />
    </projectFiles>

    <issueHandlers>
        <TooFewArguments errorLevel="suppress" /> <!-- \sodium_memzero() -->
        <PropertyNotSetInConstructor errorLevel="suppress" />
    </issueHandlers>
</psalm>
